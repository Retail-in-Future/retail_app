{
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "indent": [ "error", 2 ],
    "semi": [ "error", "never" ],
    "comma-dangle": [ "error", "never" ],
    "consistent-return": "off",
    "react/require-default-props": "off",
    "react/jsx-filename-extension": "off", // React Native apps wouldn't need a .jsx suffix?
    "react/jsx-first-prop-new-line": [ "error", "never" ]
  }
}